{
    "meta": 
        {
            "dataset": "cifar",
            "task": "cifar",
            "scene": "superclass",
            "ckpt_dir": "./ckpt/",
            "name": "cifar_semsup_scene3_desc_2"
        },
    "general_args":
        {
            "cache_dir": "./data_cache",
            "split_seed": 42,
            "val_size": 0.2,
